<!--视频直播页面.wxml-->
<view class='container'>
  <view class='main'>
      <view class='video_live'>
       <!-- <video  src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400" autoplay="true" poster="../../utils/images/video_live.png" ></video> -->
       <video  src="http://zb.liveplay.vnew.tv/zhibo1/zhibo1stream.m3u8" autoplay="true" poster="../../utils/images/video_live.png" ></video>
       <view class="viode_live_tips">
           <p>{{videoData.def_name}}:{{videoData.introduction}}</p>
           <p class="text-center">  投资有风险，入市需谨慎！</p>
       </view>
      </view>
      <!-- 评论留言 -->
      <view class="comment">
            <ul>
                <li class="yk" wx:for="{{userMessages}}">
                    <dl>
                        <dt><a href="javascript:void (0)"><image src="{{item.pic}}" alt=""></image></a></dt>
                        <dd>
                            <p class="clear info"><span class="name author">{{item.nick_name}}</span><span class="time">{{item.create_time}}</span></p>
                            <p class="message">{{item.content}}</p>
                        </dd>
                    </dl>
                </li>
            </ul>
      </view>
      <!-- 评论输入框 -->
         <form bindsubmit="formSubmit" class="speak" wx:if="{{userInfo.type==1}}">
            <textarea  name="mess" id="mess"  value="{{userInp}}"></textarea >
            <button formType="submit">发送</button>
        </form>
  </view>
</view>