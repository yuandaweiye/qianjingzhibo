.newsZx .newsZx_list {
  height: 132rpx;
  padding: 16rpx 0;
  border-bottom: 1px solid #E7E7E7;
  display: flex;
  justify-content: space-between;
}
.newsZx .newsZx_list dt {
  width: 210rpx;
  height: 152rpx;
  font-size: 0;
}
.newsZx .newsZx_list dt image {
  width: 100%;
  height: 100%;
}
.newsZx .newsZx_list dd {
  width: 380rpx;
}
.newsZx .newsZx_list dd .newZx_title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  max-height: 68rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #343434;
  overflow: hidden;
  padding-top: 10rpx;
}
.newsZx .newsZx_list dd .newZx_title a {
  color: #343434;
}
.newsZx .newsZx_list dd .newZx_title a:hover {
  color: #7d300d;
}
.newsZx .newsZx_list dd .newZx_time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 20rpx;
}
.newsZx .newsZx_list:nth-last-child(1) {
  border-bottom: 0;
}
.column_title {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #9D9D9D;
  padding-left: 40rpx;
}